{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "rootDir": "src/",
    "outDir": "dist/"
  },
  "include": ["src/**/*.ts"]
}
